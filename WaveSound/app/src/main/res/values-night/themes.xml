<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WaveSound" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/navbar</item>
        <item name="colorPrimaryVariant">@color/button</item>
        <item name="colorOnPrimary">@color/background</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/navbar</item>
        <item name="colorSecondaryVariant">@color/black</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/background</item>

        <!-- Action bar color. -->
        <item name="android:actionBarStyle">@style/MyActionBar</item>

        <!-- Customize toolbar color. -->
        <item name="toolbarStyle">@style/MyToolbar</item>
    </style>

    <!-- No action bar theme. -->
    <style name="Theme.WaveSound.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Overlay for AppBar. -->
    <style name="Theme.WaveSound.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <!-- Overlay for Popups. -->
    <style name="Theme.WaveSound.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- ActionBar style -->
    <style name="MyActionBar" parent="Widget.AppCompat.ActionBar.Solid">
        <item name="android:background">@color/navbar</item>
        <item name="android:titleTextStyle">@style/ActionBarTitleText</item>
    </style>

    <!-- Toolbar style -->
    <style name="MyToolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="backgroundTint">@color/navbar</item>
        <item name="titleTextColor">@color/white</item>
    </style>

    <!-- ActionBar title text style -->
    <style name="ActionBarTitleText" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
    </style>
</resources>